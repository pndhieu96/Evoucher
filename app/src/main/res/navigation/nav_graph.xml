<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.evoucher.ui.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.evoucher.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.evoucher.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_campaignsFragment"
            app:destination="@id/campaignsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
        <action
            android:id="@+id/action_homeFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <action
            android:id="@+id/action_homeFragment_to_campaignDetailFragment"
            app:destination="@id/campaignDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.evoucher.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_campaignDetailFragment"
            app:destination="@id/campaignDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/campaignsFragment"
        android:name="com.example.evoucher.ui.CampaignsFragment"
        android:label="fragment_campaigns"
        tools:layout="@layout/fragment_campaigns" >
        <action
            android:id="@+id/action_campaignsFragment_to_campaignDetailFragment"
            app:destination="@id/campaignDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.evoucher.ui.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.evoucher.ui.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/campaignDetailFragment"
        android:name="com.example.evoucher.ui.CampaignDetailFragment"
        android:label="fragment_campaign_detail"
        tools:layout="@layout/fragment_campaign_detail" >
        <action
            android:id="@+id/action_campaignDetailFragment_to_gamesFragment"
            app:destination="@id/gamesFragment" />
    </fragment>
    <fragment
        android:id="@+id/gamesFragment"
        android:name="com.example.evoucher.ui.GamesFragment"
        android:label="fragment_games"
        tools:layout="@layout/fragment_games" >
        <action
            android:id="@+id/action_gamesFragment_to_rollDiceFragment"
            app:destination="@id/rollDiceFragment" />
        <action
            android:id="@+id/action_gamesFragment_to_luckyNumberFragment"
            app:destination="@id/luckyNumberFragment" />
        <action
            android:id="@+id/action_gamesFragment_to_rouletteFragment"
            app:destination="@id/rouletteFragment" />
    </fragment>
    <fragment
        android:id="@+id/rollDiceFragment"
        android:name="com.example.evoucher.ui.GameRollDiceFragment"
        android:label="fragment_roll_dice"
        tools:layout="@layout/fragment_roll_dice" />
    <fragment
        android:id="@+id/luckyNumberFragment"
        android:name="com.example.evoucher.ui.GameLuckyNumberFragment"
        android:label="fragment_lucky_number"
        tools:layout="@layout/fragment_lucky_number" />
    <fragment
        android:id="@+id/rouletteFragment"
        android:name="com.example.evoucher.ui.GameRouletteFragment"
        android:label="fragment_roulette"
        tools:layout="@layout/fragment_roulette" />
</navigation>