        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.GamesFragment">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_game_lucky_number"
            android:text="So may man"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_game_roll_dice"
            android:text="Xuc xac"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_game_roulette"
            android:text="Vong quay"/>

    </LinearLayout>
</layout>