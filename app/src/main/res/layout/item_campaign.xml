<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_container"
        android:clickable="true"
        android:layout_width="320dp"
        android:layout_height="235dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_margin="1dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:background="@color/main_color_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/banhkeo_bibica_chiendich3" />

            <TextView
                style="@style/TitleText"
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_roll_dice_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                tools:text="25/5" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/SubTitleText"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_horizontal"
            android:layout_marginTop="5dp"
            tools:text="Ten chien dich"/>
        <TextView
            style="@style/NormalText"
            android:id="@+id/tv_partner"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_horizontal"
            tools:text="Ten doi tac"/>
        <TextView
            style="@style/NormalText"
            android:id="@+id/tv_branch"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_horizontal"
            tools:text="ten chi nhanh - dia chi"/>
        <TextView
            style="@style/NormalText"
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="@dimen/screen_horizontal"
            tools:text="mota"/>
    </LinearLayout>
</FrameLayout>
</layout>